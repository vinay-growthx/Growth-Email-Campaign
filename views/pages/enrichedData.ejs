<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enriched Data</title>
    <style>
      body {
        font-family: "Helvetica Neue", Arial, sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }
      h1 {
        text-align: center;
        font-size: 2.5em;
        color: #333;
        margin-bottom: 40px;
      }
      .person-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        padding: 20px;
        display: flex;
        flex-direction: row;
        align-items: center;
        transition: transform 0.3s ease;
      }
      .person-card:hover {
        transform: translateY(-10px);
      }
      .person-photo {
        border-radius: 50%;
        margin-right: 20px;
        width: 120px;
        height: 120px;
        object-fit: cover;
      }
      .person-details {
        flex-grow: 1;
      }
      .person-name {
        font-size: 1.8em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }
      .person-title {
        font-size: 1.4em;
        color: #777;
        margin-bottom: 5px;
      }
      .person-organization {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 15px;
      }
      .person-contact {
        margin-top: 10px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
      }
      .contact-icon {
        margin-right: 5px;
      }
      .linkedin-url,
      .email {
        color: #0073e6;
        text-decoration: none;
        margin-right: 20px;
      }
      .linkedin-url:hover,
      .email:hover {
        text-decoration: underline;
      }
      .employment-history {
        margin-top: 20px;
      }
      .employment-history h3 {
        font-size: 1.4em;
        color: #333;
        margin-bottom: 10px;
      }
      .employment-history ul {
        list-style-type: none;
        padding: 0;
      }
      .employment-history li {
        background-color: #f0f0f0;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 5px;
      }
      .select-checkbox {
        margin-right: 20px;
      }
      .textarea-container {
        text-align: center;
        margin: 20px 0;
      }
      .email-textarea,
      .email-subject {
        width: 100%;
        border-radius: 5px;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        margin-bottom: 10px;
      }
      .submit-btn {
        display: block;
        margin: 20px auto;
        padding: 12px 25px;
        background-color: #0073e6;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
      }
      .submit-btn:hover {
        background-color: #005bb5;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Enriched Data</h1>
      <form id="enrichedForm" onsubmit="submitEmail(event)">
        <% if (people && people.length > 0) { %> <%
        people.forEach(function(enrichData) { %> <% if (enrichData.person) { %>
        <div class="person-card">
          <input
            type="checkbox"
            class="select-checkbox"
            name="selectedPeople"
            value="<%= enrichData.person.linkedin_url %>"
          />
          <% if (enrichData.person.photo_url) { %>
          <img
            src="<%= enrichData.person.photo_url %>"
            alt="<%= enrichData.person.name %>"
            class="person-photo"
          />
          <% } else { %>
          <img
            src="https://via.placeholder.com/120"
            alt="No Photo Available"
            class="person-photo"
          />
          <% } %>
          <div class="person-details">
            <div class="person-name"><%= enrichData.person.name %></div>
            <div class="person-title"><%= enrichData.person.title %></div>
            <div class="person-organization">
              <%= enrichData.person.organization.name %>
            </div>
            <div class="person-contact">
              <span class="contact-icon">ðŸ“§</span>
              <a href="mailto:<%= enrichData.person.email %>" class="email"
                ><%= enrichData.person.email %></a
              >
            </div>
            <div class="person-contact">
              <span class="contact-icon">ðŸ”—</span>
              <a
                href="<%= enrichData.person.linkedin_url %>"
                class="linkedin-url"
                target="_blank"
                >LinkedIn Profile</a
              >
            </div>
            <div class="employment-history">
              <h3>Employment History</h3>
              <ul>
                <% enrichData.person.employment_history.forEach(function(job) {
                %>
                <li>
                  <strong>Title:</strong> <%= job.title %><br />
                  <strong>Organization:</strong> <%= job.organization_name %><br />
                  <strong>Start Date:</strong> <%= job.start_date %><br />
                  <strong>End Date:</strong> <%= job.end_date ? job.end_date :
                  'Present' %>
                </li>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
        <% } %> <% }); %> <% } else { %>
        <p>No enriched data found.</p>
        <% } %>
        <div class="textarea-container">
          <input
            type="text"
            id="emailSubject"
            class="email-subject"
            placeholder="Subject"
          />
          <textarea
            id="emailContent"
            class="email-textarea"
            placeholder="Write your email here..."
          ></textarea>
        </div>
        <button type="submit" class="submit-btn">Send Email</button>
      </form>
    </div>

    <script>
      function submitEmail(event) {
        event.preventDefault();

        const selectedPeople = Array.from(
          document.querySelectorAll('input[name="selectedPeople"]:checked')
        ).map((checkbox) => checkbox.value);
        if (selectedPeople.length === 0) {
          alert("Please select at least one person.");
          return;
        }

        const emailSubject = document.getElementById("emailSubject").value;
        if (!emailSubject) {
          alert("Please enter a subject.");
          return;
        }

        const emailContent = document.getElementById("emailContent").value;
        if (!emailContent) {
          alert("Please write email content.");
          return;
        }

        // Use fetch API to send data to your server
        fetch("/send-email", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ selectedPeople, emailSubject, emailContent }),
        })
          .then((response) => response.json())
          .then((data) => {
            alert("Email sent successfully!");
          })
          .catch((error) => {
            console.error("Error during email sending:", error);
            alert("Failed to send email: " + error.message);
          });
      }
    </script>
  </body>
</html>
