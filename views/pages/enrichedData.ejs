<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reachout People</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto", Arial, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }
      h1 {
        text-align: center;
        font-size: 3em;
        color: #333;
        margin-bottom: 40px;
      }
      .person-card {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        padding: 20px;
        display: flex;
        flex-direction: row;
        align-items: center;
        transition: transform 0.3s ease;
      }
      .person-card:hover {
        transform: translateY(-10px);
      }
      .person-photo {
        border-radius: 50%;
        margin-right: 20px;
        width: 120px;
        height: 120px;
        object-fit: cover;
      }
      .person-details {
        flex-grow: 1;
      }
      .person-name {
        font-size: 2em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }
      .person-title {
        font-size: 1.6em;
        color: #777;
        margin-bottom: 5px;
      }
      .person-organization {
        font-size: 1.4em;
        color: #555;
        margin-bottom: 15px;
      }
      .person-contact {
        margin-top: 10px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
      }
      .contact-icon {
        margin-right: 5px;
      }
      .linkedin-url,
      .email {
        color: #0073e6;
        text-decoration: none;
        margin-right: 20px;
      }
      .linkedin-url:hover,
      .email:hover {
        text-decoration: underline;
      }
      .employment-history {
        margin-top: 20px;
      }
      .employment-history h3 {
        font-size: 1.6em;
        color: #333;
        margin-bottom: 10px;
      }
      .employment-history ul {
        list-style-type: none;
        padding: 0;
      }
      .employment-history li {
        background-color: #f0f0f0;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 5px;
      }
      .select-checkbox {
        margin-right: 20px;
      }
      .submit-btn {
        display: block;
        margin: 20px auto;
        padding: 15px 30px;
        background-color: #0073e6;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
      }
      .submit-btn:hover {
        background-color: #005bb5;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Enriched Data</h1>
      <form id="enrichedForm" onsubmit="submitEmail(event)">
        <% if (people && people.length > 0) { %> <%
        people.forEach(function(enrichData) { %> <% if (enrichData.person) { %>
        <div class="person-card">
          <input
            type="checkbox"
            class="select-checkbox"
            name="selectedPeople"
            value="<%= enrichData.person.linkedin_url %>"
          />
          <% if (enrichData.person.photo_url) { %>
          <img
            src="<%= enrichData.person.photo_url %>"
            alt="<%= enrichData.person.name %>"
            class="person-photo"
          />
          <% } else { %>
          <img
            src="https://via.placeholder.com/120"
            alt="No Photo Available"
            class="person-photo"
          />
          <% } %>
          <div class="person-details">
            <div class="person-name"><%= enrichData.person.name %></div>
            <div class="person-title"><%= enrichData.person.title %></div>
            <div class="person-organization">
              <%= enrichData.person.organization.name %>
            </div>
            <div class="person-contact">
              <span class="contact-icon">ðŸ“§</span>
              <a href="mailto:<%= enrichData.person.email %>" class="email"
                ><%= enrichData.person.email %></a
              >
            </div>
            <div class="person-contact">
              <span class="contact-icon">ðŸ”—</span>
              <a
                href="<%= enrichData.person.linkedin_url %>"
                class="linkedin-url"
                target="_blank"
                >LinkedIn Profile</a
              >
            </div>
          </div>
        </div>
        <% } %> <% }); %> <% } else { %>
        <p>No enriched data found.</p>
        <% } %>
        <button type="submit" class="submit-btn">Send Email</button>
      </form>
    </div>

    <script>
      function submitEmail(event) {
        event.preventDefault();

        // Collect checked LinkedIn URLs
        const selectedPeople = Array.from(
          document.querySelectorAll('input[name="selectedPeople"]:checked')
        ).map((checkbox) => checkbox.value);

        // Collect email addresses associated with the selected LinkedIn URLs
        const emails = Array.from(
          document.querySelectorAll('input[name="selectedPeople"]:checked')
        ).map((checkbox) =>
          checkbox.closest(".person-card").querySelector(".email").href.slice(7)
        ); // Remove 'mailto:'

        if (selectedPeople.length === 0) {
          alert("Please select at least one person.");
          return;
        }

        // Fetch the enriched data and then redirect to the send-email page
        fetch("/email-enrich", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            linkedinUrls: selectedPeople,
            emails: emails,
          }),
        })
          .then((response) => {
            if (!response.ok) {
              return response.text().then((text) => {
                throw new Error(text);
              });
            }
            return response.json();
          })
          .then((data) => {
            console.log("Data successfully enriched:", data);
            // Redirect to the send-email page with the enriched data
            const url = new URL(window.location.href);
            url.pathname = "/send-email";
            url.searchParams.set("data", JSON.stringify(data.data));
            window.location.href = url.toString();
          })
          .catch((error) => {
            console.error("Error during email enrichment:", error);
            alert("Failed to enrich emails: " + error.message);
          });
      }
    </script>
  </body>
</html>
