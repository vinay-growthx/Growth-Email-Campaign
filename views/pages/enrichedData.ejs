<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enriched People</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      body,
      html {
        font-family: "Poppins", Arial, sans-serif;
        background: linear-gradient(135deg, #f6f9fc 0%, #e9f2f9 100%);
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }

      .parallax-container {
        perspective: 1px;
        height: 100vh;
        overflow-x: hidden;
        overflow-y: auto;
      }
      .parallax-layer {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
      }
      .parallax-background {
        transform: translateZ(-1px) scale(2);
        background: url("https://source.unsplash.com/random/1920x1080?abstract")
          no-repeat center center fixed;
        background-size: cover;
        z-index: -1;
      }
      .content {
        transform: translateZ(0);
        position: relative;
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        margin: 20px auto;
        padding: 40px;
        max-width: 1200px;
      }
      h1 {
        text-align: center;
        font-size: 3em;
        color: #333;
        margin-bottom: 40px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        animation: slideDown 1s ease-out;
      }
      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .person-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        padding: 30px;
        display: flex;
        flex-direction: row;
        align-items: center;
        transition: all 0.3s ease;
        animation: slideIn 0.5s ease-out forwards;
        opacity: 0;
        transform: translateX(-50px);
      }
      @keyframes slideIn {
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
      .person-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
      }
      .person-photo {
        border-radius: 50%;
        margin-right: 20px;
        width: 120px;
        height: 120px;
        object-fit: cover;
      }
      .person-details {
        flex-grow: 1;
      }
      .person-name {
        font-size: 1.8em;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 10px;
        transition: color 0.3s ease;
      }
      .person-card:hover .person-name {
        color: #3498db;
      }
      .person-title {
        font-size: 1.4em;
        color: #7f8c8d;
        margin-bottom: 5px;
      }
      .person-organization {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 15px;
      }
      .person-contact {
        margin-top: 10px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
      }
      .contact-icon {
        margin-right: 5px;
      }
      .linkedin-url,
      .email {
        color: #3498db;
        text-decoration: none;
        margin-right: 20px;
        transition: color 0.3s ease;
      }
      .linkedin-url:hover,
      .email:hover {
        color: #2980b9;
      }
      .select-checkbox {
        margin-right: 20px;
      }
      .submit-btn {
        display: block;
        margin: 40px auto;
        padding: 15px 30px;
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: #fff;
        text-decoration: none;
        border-radius: 30px;
        transition: all 0.3s ease;
        text-align: center;
        width: fit-content;
        font-size: 1.2em;
        font-weight: 600;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        animation: float 3s ease-in-out infinite;
      }
      @keyframes float {
        0% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-10px);
        }
        100% {
          transform: translateY(0px);
        }
      }
      .submit-btn:hover {
        background: linear-gradient(135deg, #2980b9 0%, #3498db 100%);
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
      }
      .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
      }
      .select-all-container {
        display: flex;
        align-items: center;
        animation: fadeIn 1s ease-out;
      }
      .select-all-label {
        font-size: 1.1em;
        margin-left: 10px;
        color: #2c3e50;
      }
      #selectAll {
        appearance: none;
        -webkit-appearance: none;
        width: 25px;
        height: 25px;
        border: 2px solid #3498db;
        border-radius: 5px;
        outline: none;
        transition: all 0.3s;
        position: relative;
        cursor: pointer;
      }
      #selectAll:checked {
        background-color: #3498db;
        animation: pulse 0.5s;
      }
      #selectAll:checked::before {
        content: "âœ”";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 16px;
      }
      .download-btn {
        margin-top: 20px;
        padding: 15px 30px;
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: #fff;
        text-decoration: none;
        border-radius: 30px;
        transition: all 0.3s ease;
        text-align: center;
        font-size: 1.2em;
        font-weight: 600;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
      }
      .download-btn:hover {
        background: linear-gradient(135deg, #2980b9 0%, #3498db 100%);
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      @keyframes pulse {
        0% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.1);
        }
        100% {
          transform: scale(1);
        }
      }
      .select-checkbox {
        appearance: none;
        -webkit-appearance: none;
        width: 25px;
        height: 25px;
        border: 2px solid #3498db;
        border-radius: 5px;
        outline: none;
        transition: all 0.3s;
        position: relative;
        cursor: pointer;
        margin-right: 20px;
      }

      .select-checkbox:checked {
        background-color: #3498db;
        animation: pulse 0.5s;
      }

      .select-checkbox:checked::before {
        content: "âœ”";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 16px;
      }
      .checkbox-container {
        display: inline-block;
        position: relative;
        padding-left: 35px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 22px;
        user-select: none;
      }

      .checkbox-container input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
      }

      .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        height: 25px;
        width: 25px;
        background-color: #fff;
        border: 2px solid #3498db;
        border-radius: 5px;
      }

      .checkbox-container:hover input ~ .checkmark {
        background-color: #ccc;
      }

      .checkbox-container input:checked ~ .checkmark {
        background-color: #3498db;
      }

      .checkmark:after {
        content: "";
        position: absolute;
        display: none;
      }

      .checkbox-container input:checked ~ .checkmark:after {
        display: block;
      }

      .checkbox-container .checkmark:after {
        left: 9px;
        top: 5px;
        width: 5px;
        height: 10px;
        border: solid white;
        border-width: 0 3px 3px 0;
        transform: rotate(45deg);
      }
      .selected-count-container {
        position: sticky;
        top: 0;
        z-index: 1000;
        background: rgba(255, 255, 255, 0.9);
        padding: 10px 0;
        backdrop-filter: blur(5px);
        border-bottom: 1px solid rgba(52, 152, 219, 0.3);
      }

      .selected-count {
        font-size: 2em;
        text-align: center;
        color: #3498db;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        animation: pulse 1.5s infinite alternate;
      }

      @keyframes pulse {
        from {
          transform: scale(1);
        }
        to {
          transform: scale(1.05);
        }
      }

      .selected-count.party {
        animation: party 0.5s ease-in-out;
      }

      @keyframes party {
        0% {
          transform: rotate(0deg) scale(1);
        }
        25% {
          transform: rotate(-5deg) scale(1.1);
        }
        50% {
          transform: rotate(5deg) scale(1.1);
        }
        75% {
          transform: rotate(-5deg) scale(1.1);
        }
        100% {
          transform: rotate(0deg) scale(1);
        }
      }
      @media screen and (max-width: 768px) {
        .content {
          padding: 20px;
          margin: 10px;
        }

        h1 {
          font-size: 2em;
        }

        .person-card {
          flex-direction: column;
          align-items: flex-start;
          padding: 20px;
        }

        .person-photo {
          margin-right: 0;
          margin-bottom: 15px;
          width: 100px;
          height: 100px;
        }

        .person-details {
          width: 100%;
        }

        .person-name {
          font-size: 1.5em;
        }

        .person-title,
        .person-organization {
          font-size: 1.2em;
        }

        .person-contact {
          flex-direction: column;
          align-items: flex-start;
        }

        .linkedin-url,
        .email {
          margin-right: 0;
          margin-bottom: 10px;
        }

        .select-checkbox {
          margin-right: 15px;
        }

        .submit-btn,
        .download-btn {
          padding: 12px 25px;
          font-size: 1em;
          width: 100%;
          margin-top: 20px;
        }

        .results-header {
          flex-direction: column;
          align-items: flex-start;
        }

        .select-all-container {
          margin-bottom: 15px;
        }

        .selected-count {
          font-size: 1.5em;
        }

        .checkbox-container {
          padding-left: 30px;
        }

        .checkmark {
          height: 20px;
          width: 20px;
        }

        .checkbox-container .checkmark:after {
          left: 7px;
          top: 3px;
          width: 4px;
          height: 8px;
        }
      }
    </style>
  </head>
  <body>
    <div class="parallax-container">
      <div class="parallax-layer parallax-background"></div>
      <div class="parallax-layer content">
        <h1>Enriched Data</h1>
        <div id="selected-count-container" class="selected-count-container">
          <div id="selected-count" class="selected-count">
            0 People Selected
          </div>
        </div>
        <div class="results-header">
          <div class="select-all-container">
            <input type="checkbox" id="selectAll" />
            <label for="selectAll" class="select-all-label">Select All</label>
          </div>
          <button class="download-btn" onclick="downloadCSV()">Download</button>
        </div>
        <form
          id="enrichedForm"
          onsubmit="submitEmail(event)"
          action="/email-enrich-process"
          method="POST"
        >
          <% if (people && people.length > 0) { %> <%
          people.forEach(function(enrichData, index) { %> <% if (enrichData) {
          %>
          <input type="hidden" name="reqId" value="<%= reqId %>" />
          <div class="person-card" style="animation-delay: <%= index * 0.1 %>s">
            <input
              type="checkbox"
              class="select-checkbox"
              name="selectedPeople"
              value="<%= enrichData._id %>"
              id="person<%= index %>"
            />
            <label
              for="person<%= index %>"
              class="select-checkbox-label"
            ></label>
            <% if (enrichData.photo_url) { %>
            <img
              src="<%= enrichData.photo_url %>"
              alt="<%= enrichData.name %>"
              class="person-photo"
            />
            <% } else { %>
            <img
              src="https://via.placeholder.com/120"
              alt="No Photo Available"
              class="person-photo"
            />
            <% } %>
            <div class="person-details">
              <div class="person-name"><%= enrichData.name %></div>
              <div class="person-title"><%= enrichData.title %></div>
              <div class="person-organization">
                <%= enrichData.organization.name %>
              </div>
              <div class="person-contact">
                <span class="contact-icon">ðŸ“§</span>
                <a href="mailto:<%= enrichData.email %>" class="email"
                  ><%= enrichData.email %></a
                >
              </div>
              <div class="person-contact">
                <span class="contact-icon">ðŸ”—</span>
                <a
                  href="<%= enrichData.linkedin_url %>"
                  class="linkedin-url"
                  target="_blank"
                  >LinkedIn Profile</a
                >
              </div>
            </div>
          </div>
          <% } %> <% }); %> <% } else { %>
          <p>No enriched data found.</p>
          <% } %>
          <button type="submit" class="submit-btn" id="submitBtn">
            Initiate Email
          </button>
        </form>
      </div>
    </div>

    <script>
      function submitEmail(event) {
        event.preventDefault();

        const submitButton = document.getElementById("submitBtn");

        // Disable the button immediately
        disableButton(submitButton);

        const selectedEmails = Array.from(
          document.querySelectorAll('input[name="selectedPeople"]:checked')
        ).map((checkbox) => checkbox.value);

        if (selectedEmails.length === 0) {
          alert("Please select at least one person.");
          enableButton(submitButton); // Re-enable the button if no emails are selected
          return;
        }

        // Create a hidden input to store the selected emails
        const hiddenInput = document.createElement("input");
        hiddenInput.type = "hidden";
        hiddenInput.name = "enrichedIds";
        hiddenInput.value = JSON.stringify(selectedEmails);

        // Append the hidden input to the form
        const form = document.getElementById("enrichedForm");
        form.appendChild(hiddenInput);

        // Get the reqId value
        const reqId = document.querySelector('input[name="reqId"]').value;

        // Create a hidden input for reqId if it doesn't exist
        if (!form.querySelector('input[name="reqId"]')) {
          const reqIdInput = document.createElement("input");
          reqIdInput.type = "hidden";
          reqIdInput.name = "reqId";
          reqIdInput.value = reqId;
          form.appendChild(reqIdInput);
        }

        // Submit the form
        form.submit();
      }

      function disableButton(button) {
        button.disabled = true;
        button.style.opacity = "0.5";
        button.textContent = "Processing...";

        setTimeout(() => {
          enableButton(button);
        }, 20000); // 20 seconds
      }

      function enableButton(button) {
        button.disabled = false;
        button.style.opacity = "1";
        button.textContent = "Initiate Email";
      }
      document.addEventListener("DOMContentLoaded", (event) => {
        const selectAllCheckbox = document.getElementById("selectAll");
        const personCheckboxes = document.querySelectorAll(".select-checkbox");
        const selectedCountElement = document.getElementById("selected-count");

        function updateSelectedCount() {
          const selectedCount = document.querySelectorAll(
            'input[name="selectedPeople"]:checked'
          ).length;
          selectedCountElement.textContent = `${selectedCount} ${
            selectedCount === 1 ? "Person" : "People"
          } Selected`;
          selectedCountElement.classList.add("party");
          setTimeout(() => selectedCountElement.classList.remove("party"), 500);
        }

        selectAllCheckbox.addEventListener("change", function () {
          const isChecked = this.checked;
          personCheckboxes.forEach((checkbox) => {
            checkbox.checked = isChecked;
          });
          updateSelectedCount();
        });

        personCheckboxes.forEach((checkbox) => {
          checkbox.addEventListener("change", function () {
            const allChecked = Array.from(personCheckboxes).every(
              (cb) => cb.checked
            );
            selectAllCheckbox.checked = allChecked;
            updateSelectedCount();
          });
        });

        updateSelectedCount(); // Initial count update
      });
      function downloadCSV() {
        const selectedPeople = Array.from(
          document.querySelectorAll('input[name="selectedPeople"]:checked')
        )
          .map((checkbox) => {
            const personCard = checkbox.closest(".person-card");
            if (!personCard) return null;

            return {
              name: personCard.querySelector(".person-name").textContent,
              title: personCard.querySelector(".person-title").textContent,
              organization: personCard.querySelector(".person-organization")
                .textContent,
              email: personCard.querySelector(".email").textContent,
              linkedin_url: personCard.querySelector(".linkedin-url").href,
            };
          })
          .filter((person) => person !== null);

        if (selectedPeople.length === 0) {
          alert("Please select at least one person to download.");
          return;
        }

        const csvContent =
          "data:text/csv;charset=utf-8," +
          [
            Object.keys(selectedPeople[0]).join(","),
            ...selectedPeople.map((person) => Object.values(person).join(",")),
          ].join("\n");

        const encodedUri = encodeURI(csvContent);
        const link = document.createElement("a");
        link.setAttribute("href", encodedUri);
        link.setAttribute("download", "enriched_people_data.csv");
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      }
    </script>
  </body>
</html>
