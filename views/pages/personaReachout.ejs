<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Persona Reachout</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Nunito", sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 20px;
        color: #333;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
      }
      h1 {
        text-align: center;
        font-size: 2.5em;
        color: #274060;
        margin-bottom: 40px;
      }
      .person-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        padding: 20px;
        display: flex;
        flex-direction: row;
        align-items: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .person-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
      }
      .person-photo {
        border-radius: 50%;
        margin-right: 20px;
        width: 120px;
        height: 120px;
        object-fit: cover;
      }
      .person-details {
        flex-grow: 1;
      }
      .person-name {
        font-size: 1.8em;
        font-weight: bold;
        color: #274060;
      }
      .person-title {
        font-size: 1.4em;
        color: #777;
      }
      .person-organization {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 10px;
      }
      .person-contact {
        margin-top: 10px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
      }
      .contact-icon {
        margin-right: 10px;
      }
      .linkedin-url,
      .email {
        color: #0056b3;
        text-decoration: none;
        margin-right: 20px;
      }
      .linkedin-url:hover,
      .email:hover {
        text-decoration: underline;
      }
      .employment-history {
        margin-top: 20px;
      }
      .employment-history h3 {
        font-size: 1.4em;
        color: #333;
      }
      .employment-history ul {
        list-style-type: none;
        padding: 0;
      }
      .employment-history li {
        background-color: #f0f0f0;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 5px;
      }
      .submit-btn {
        display: block;
        margin: 20px auto;
        padding: 12px 25px;
        background-color: #0073e6;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
      }
      .submit-btn:hover {
        background-color: #005bb5;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Persona Reachout</h1>
      <form id="personaForm" onsubmit="submitSelectedPeople(event)">
        <% if (people && people.length > 0) { %> <%
        people.forEach(function(person, index) { %>
        <div class="person-card">
          <input
            type="checkbox"
            class="select-checkbox"
            name="selectedPeople"
            value="<%= index %>"
          />
          <img
            src="<%= person.photo_url %>"
            alt="<%= person.name %>"
            class="person-photo"
          />
          <div class="person-details">
            <div class="person-name"><%= person.name %></div>
            <div class="person-title"><%= person.title %></div>
            <div class="person-organization">
              <%= person.organization.name %>
            </div>
            <div class="person-contact">
              <span class="contact-icon">ðŸ“§</span>
              <a href="mailto:<%= person.email %>" class="email"
                ><%= person.email %></a
              >
            </div>
            <div class="person-contact">
              <span class="contact-icon">ðŸ”—</span>
              <a
                href="<%= person.linkedin_url %>"
                class="linkedin-url"
                target="_blank"
                >LinkedIn Profile</a
              >
            </div>
            <div class="employment-history">
              <h3>Employment History</h3>
              <ul>
                <% person.employment_history.forEach(function(job) { %>
                <li>
                  <strong>Title:</strong> <%= job.title %><br />
                  <strong>Organization:</strong> <%= job.organization_name %><br />
                  <strong>Start Date:</strong> <%= job.start_date %><br />
                  <strong>End Date:</strong> <%= job.end_date ? job.end_date :
                  'Present' %>
                </li>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
        <% }); %> <% } else { %>
        <p>No personas found.</p>
        <% } %>
        <button type="submit" class="submit-btn">Submit Selected</button>
      </form>
    </div>

    <script>
      function submitSelectedPeople(event) {
        event.preventDefault();

        const selectedPeople = Array.from(document.querySelectorAll('input[name="selectedPeople"]:checked')).map(checkbox => checkbox.value);
        if (selectedPeople.length === 0) {
            alert('Please select at least one person.');
            return;
        }

        const peopleData = JSON.parse('<%- JSON.stringify(people).replace(/\\/g, '\\\\').replace(/'/g, "\\'").replace(/"/g, '\\"') %>');
        const selectedLinkedInUrls = selectedPeople.map(index => peopleData[index].linkedin_url);

        // Use fetch API to send data to your server
        fetch('/email-enrich', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ linkedinUrls: selectedLinkedInUrls })
        })
        .then(response => {
            if (!response.ok) {
                return response.text().then(text => { throw new Error(text) });
            }
            return response.json();
        })
        .then(data => {
            console.log('Data successfully enriched:', data);
            // Redirect to the enriched data page with the enriched data
            const url = new URL(window.location.href);
            url.pathname = '/enriched-data';
            url.searchParams.set('data', JSON.stringify(data.data));
            window.location.href = url.toString();
        })
        .catch(error => {
            console.error('Error during email enrichment:', error);
            alert('Failed to enrich emails: ' + error.message);
        });
      }
    </script>
  </body>
</html>
