<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Send Email</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdnjs.cloudflare.com/ajax/libs/trix/1.3.1/trix.css"
    />
    <style>
      body {
        font-family: "Roboto", Arial, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 20px;
        color: #333;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }
      h1 {
        text-align: center;
        font-size: 2.5em;
        color: #0073e6;
        margin-bottom: 20px;
      }
      .form-group {
        margin-bottom: 20px;
      }
      .form-group label {
        display: block;
        font-size: 1.2em;
        margin-bottom: 10px;
        color: #555;
      }
      .form-group input,
      .form-group textarea,
      trix-editor {
        width: calc(100% - 20px);
        padding: 10px;
        font-size: 1em;
        border-radius: 5px;
        border: 1px solid #ddd;
        background-color: #f7f7f7;
        box-sizing: border-box;
      }
      .form-group input:focus,
      .form-group textarea:focus,
      trix-editor:focus {
        border-color: #0073e6;
        background-color: #fff;
        outline: none;
      }
      trix-editor {
        min-height: 200px;
      }
      .submit-btn {
        display: block;
        width: 100%;
        padding: 15px;
        background-color: #0073e6;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
      }
      .submit-btn:hover {
        background-color: #005bb5;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Send Email</h1>
      <form id="emailForm" onsubmit="submitEmail(event)">
        <div class="form-group">
          <label for="emailSubject">Subject:</label>
          <input
            type="text"
            id="emailSubject"
            name="subject"
            placeholder="Enter the email subject"
          />
        </div>
        <div class="form-group">
          <label for="emailBody">Email Body:</label>
          <input id="emailBody" name="body" type="hidden" />
          <trix-editor input="emailBody"></trix-editor>
        </div>
        <button type="submit" class="submit-btn">Send Email</button>
      </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/trix/1.3.1/trix.js"></script>
    <script>
      function submitEmail(event) {
        event.preventDefault();

        const subject = document.getElementById("emailSubject").value;
        const body = document.getElementById("emailBody").value;

        if (!subject || !body) {
          alert("Please fill in both the subject and the body.");
          return;
        }

        // Use fetch API to send data to your server
        fetch("/send-email", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ subject, body }),
        })
          .then((response) => response.json())
          .then((data) => {
            alert("Email sent successfully!");
          })
          .catch((error) => {
            console.error("Error during email sending:", error);
            alert("Failed to send email: " + error.message);
          });
      }
    </script>
  </body>
</html>
