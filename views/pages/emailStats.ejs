<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Statistics - Advanced Outreach AI</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-color: #2196f3;
        --primary-light: #bbdefb;
        --primary-dark: #1976d2;
        --secondary-color: #ffc107;
        --text-color: #333333;
        --background-color: #f5f7fa;
        --card-background: #ffffff;
        --success-color: #4caf50;
        --error-color: #f44336;
        --border-radius: 12px;
        --box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
      }

      body,
      html {
        font-family: "Poppins", Arial, sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
        line-height: 1.6;
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
      }

      h1,
      h2 {
        color: var(--primary-dark);
        text-align: center;
      }

      .stats-card {
        background-color: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        padding: 20px;
        margin-bottom: 40px;
      }

      .stats-card h3 {
        color: var(--primary-color);
        font-size: 1.2em;
        margin-bottom: 20px;
        text-align: center;
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
      }

      .stat-item {
        background-color: var(--primary-light);
        border-radius: var(--border-radius);
        padding: 15px;
        text-align: center;
        transition: var(--transition);
      }

      .stat-item:hover {
        transform: translateY(-5px);
        box-shadow: var(--box-shadow);
      }

      .stat-item h4 {
        color: var(--primary-dark);
        margin: 0 0 10px 0;
      }

      .stat-item p {
        font-size: 1.5em;
        font-weight: bold;
        margin: 0;
        color: var(--text-color);
      }

      .search-stats {
        margin-top: 40px;
      }

      .search-stat-item {
        background-color: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        padding: 20px;
        margin-bottom: 20px;
      }

      .search-stat-item h4 {
        color: var(--primary-color);
        margin-top: 0;
      }

      .search-stat-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
      }

      .search-stat-grid div {
        background-color: var(--primary-light);
        border-radius: var(--border-radius);
        padding: 10px;
        text-align: center;
      }

      .search-stat-grid h5 {
        color: var(--primary-dark);
        margin: 0 0 5px 0;
      }

      .search-stat-grid p {
        font-weight: bold;
        margin: 0;
      }

      @media (max-width: 768px) {
        .stats-grid,
        .search-stat-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Email Statistics</h1>

      <div class="stats-card">
        <h3>Overall Email Performance</h3>
        <div class="stats-grid">
          <div class="stat-item">
            <h4>Total Sent</h4>
            <p><%= overallStats.totalSent %></p>
          </div>
          <div class="stat-item">
            <h4>Opened</h4>
            <p><%= overallStats.opened %></p>
          </div>
          <div class="stat-item">
            <h4>Clicked</h4>
            <p><%= overallStats.clicked %></p>
          </div>
          <div class="stat-item">
            <h4>Delivered</h4>
            <p><%= overallStats.delivered %></p>
          </div>
          <div class="stat-item">
            <h4>Bounced</h4>
            <p><%= overallStats.bounced %></p>
          </div>
        </div>
      </div>

      <h2>Email Statistics by Search</h2>

      <div class="search-stats">
        <% searchStats.forEach(function(stat) { %>
        <div class="search-stat-item">
          <h4>Search ID: <%= stat._id %></h4>
          <div class="search-stat-grid">
            <div>
              <h5>Total Sent</h5>
              <p><%= stat.totalSent %></p>
            </div>
            <div>
              <h5>Opened</h5>
              <p><%= stat.opened %></p>
            </div>
            <div>
              <h5>Clicked</h5>
              <p><%= stat.clicked %></p>
            </div>
            <div>
              <h5>Delivered</h5>
              <p><%= stat.delivered %></p>
            </div>
            <div>
              <h5>Bounced</h5>
              <p><%= stat.bounced %></p>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <script>
      // You can add any necessary JavaScript here
    </script>
  </body>
</html>
